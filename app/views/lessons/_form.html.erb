<div class= "container-fluid">
<%= form_with(model: lesson, url: [course, lesson]) do |form| %>
  <% if lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
        <% lesson.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group col">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="form-group col">
    <%= form.label :picture %>
    <%= form.file_field :picture %>
  </div>

  <div class="form-group col">
    <%= form.label :document %>
    <%= form.file_field :document %>
  </div>
  
   <p>
    <% if @lesson.documents.attached? %>
      <strong>Documents:</strong>
      <td data-title="Document"><br>
      <% @lesson.documents.each do |document| %> 
      <%= link_to "Download File", document, download: '' %>
      <%= image_tag document %>  
      <%end %>
    <%end%>
    <div class="form-group col">
      <%= form.label :documents %>
      <%= form.file_field :documents, multiple: true %>
    <div>
  </p>

  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>